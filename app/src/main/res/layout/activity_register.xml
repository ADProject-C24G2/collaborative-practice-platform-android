<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_auth_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 标题 -->
    <TextView
        android:id="@+id/title"
        android:text="Create Account"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.05"/>

    <!-- 表单卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Full name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full name"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputPassword"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="password_toggle"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Address (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputAddress"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address (optional)"
                    android:inputType="textPostalAddress"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_home"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputPhone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone (optional)"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Gender (optional) - 下拉 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputGender"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:endIconMode="dropdown_menu"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/dropGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender (optional)"
                    android:inputType="none"
                    android:drawableStart="@drawable/ic_user"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Group (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputGroup"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Group (optional)"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_group"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Title (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTitle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title (optional)"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_title"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Signature (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputSignature"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSignature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Signature (optional)"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:imeOptions="actionNext"
                    android:drawableStart="@drawable/ic_signature"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tags (optional) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTags"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/input_stroke"
                app:boxStrokeWidthFocused="2dp"
                app:hintEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tags (comma separated) (optional)"
                    android:imeOptions="actionDone"
                    android:drawableStart="@drawable/ic_tags"
                    android:drawablePadding="8dp"
                    android:background="@null"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 注册按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Create Account"
                android:textAllCaps="false"
                android:backgroundTint="@color/black"/>

            <!-- Loading -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <!-- 跳到登录 -->
            <TextView
                android:id="@+id/linkToLogin"
                android:text="Already have an account?  Sign in →"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 插画（可选） -->
    <ImageView
        android:id="@+id/hero"
        android:src="@drawable/illustration_auth"
        android:contentDescription="@null"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
