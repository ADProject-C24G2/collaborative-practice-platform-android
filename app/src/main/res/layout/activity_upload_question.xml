<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF8E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 返回 -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:tint="@android:color/black"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_marginBottom="8dp" />

        <!-- 题干 -->
        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question（必填）"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- 选项 -->
        <EditText
            android:id="@+id/etOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Options（例如：1,2,3）"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- 答案 -->
        <EditText
            android:id="@+id/etAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer（例如：1）"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- 四个分类选择按钮 -->
        <Button
            android:id="@+id/btnGrade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grade（默认 other）"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject（默认 other）"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category（默认 other）"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic（默认 other）"
            android:layout_marginBottom="16dp" />

        <!-- 图片（可 URL 或 Base64） -->
        <EditText
            android:id="@+id/etImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Image（URL 或 Base64，可留空）"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="UPLOAD QUESTION" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge"/>
    </LinearLayout>
</ScrollView>
